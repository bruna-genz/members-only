<div class=list-container>
    <h1 class="big-title">All users</h1>
    <%= will_paginate @collection, renderer: WillPaginateSemanticUi::ActionView::Renderer %>
    <ul class="users">
    <% @users.each do |user| %>
        <li>
        <%= gravatar_for user, size: 50 %>
        <%= link_to user.name, user %>
        </li>
    <% end %>
    </ul>
    
    <%= will_paginate @collection, renderer: WillPaginateSemanticUi::ActionView::Renderer %>
</div>